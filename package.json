{
  "name": "@carlos8a/vite-component-library-template",
  "private": false,
  "version": "0.0.1",
  "description": "A simple template for creating a component library using Vite, React, and TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/CarlosUlisesOchoa/vite-component-library-template"
  },
  "keywords": [
    "react",
    "react component",
    "react typescript"
  ],
  "author": "Carlos Ochoa <contact@carlos8a.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CarlosUlisesOchoa/vite-component-library-template/issues"
  },
  "homepage": "https://github.com/CarlosUlisesOchoa/vite-component-library-template",
  "scripts": {
    "build": "shx rm -rf dist && vite build",
    "delete:node_modules": "shx rm -rf package-lock.json && shx rm -rf node_modules",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,js,mdx}\"",
    "test": "vitest",
    "test:cov": "vitest run --coverage"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier -w"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/vite-component-library-template.cjs",
  "module": "dist/vite-component-library-template.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "import": "./dist/vite-component-library-template.mjs",
      "require": "./dist/cjs/vite-component-library-template.js"
    }
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.2.2",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.1.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shx": "^0.3.4",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vite-plugin-css-injected-by-js": "^3.4.0",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.2.2"
  }
}
